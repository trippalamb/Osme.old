int :: n
int :: sum
int :: fibNum

n = 2
sum = 0
fibNum = fib(n)

do while (fibNum <= 4000000)

    if(fibNum % 2 == 0)
        sum += fibNum
    end if

    n++

    fibNum = fib(n)

end do

write "Problem2: ".sum

fxn fib(int n) return(int z)

    real :: Phi
    Phi = (1 + 5**(0.5))/2
    z = ~((Phi**n - (-Phi)**(-n))/(5**(0.5)))

end fxn fib
